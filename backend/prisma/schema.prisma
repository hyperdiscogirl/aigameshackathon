generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  sessionId String    @id @default(auto()) @map("_id") @db.ObjectId
  settings SessionSettings
  admin User
  players User[]
  gameState GameState?
}

type GameState {
  curRound Round
  curTurn Turn
  prevRounds Round[]
}

type SessionSettings {
  numRounds Int
  timerLimit Int
  numOptions Int
}

type User {
  userId   Int
  username String
}

type Round {
  turns Turn[]
}

type Turn {
  options Option[]
  userChoices Choice[]
}

type Choice {
  user User
  option Option
}

type Option {
  text String
  emoji String
}
